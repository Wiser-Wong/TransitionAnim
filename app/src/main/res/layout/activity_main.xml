<?xml version="1.0" encoding="utf-8"?>
<com.wiser.transitionanim.SelectSpecificationsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/selectSfLayout"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center"
            android:onClick="transitionActivityClick"
            android:padding="15dp"
            android:text="TransitionActivity"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center"
            android:onClick="transitionWindowClick"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:text="TransitionWindow"
            android:textColor="@color/white" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_share_elements1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="shareElements"
                android:padding="15dp"
                android:text="共享元素"
                android:textColor="@color/white"
                android:transitionName="shareElements1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_share_elements2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000ff"
                android:gravity="center"
                android:layout_gravity="end"
                android:src="@drawable/abc_vector_test"
                android:padding="15dp"
                android:transitionName="shareElements2" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/purple_700"
            android:gravity="center"
            android:padding="15dp"
            android:onClick="overridePendingTransitionClick"
            android:text="overridePendingTransition"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:padding="15dp"
            android:text="圆形揭露动画1"
            android:onClick="circularRevealClick1"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:padding="15dp"
            android:text="图片预览"
            android:onClick="previewPhotoClick"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:padding="15dp"
            android:text="选择规格弹窗"
            android:onClick="selectSpecificationDialogClick"
            android:textColor="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_circular_reveal_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#ff0000"
                android:text="转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画转场动画"/>

            <TextView
                android:id="@+id/tv_circular_reveal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_bg"
                android:layout_gravity="bottom|end"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:text="圆形揭露动画2"
                android:onClick="circularRevealClick2"
                android:textColor="@color/white" />

        </FrameLayout>
    </LinearLayout>
</com.wiser.transitionanim.SelectSpecificationsLayout>